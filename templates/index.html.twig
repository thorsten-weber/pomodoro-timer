{% extends 'base.html.twig' %}

{% block title %} INDEX | {{ parent() }} | {{ app_name }}{% endblock %}

{% block body %}

    <div class="container section">
        <div class="row">
            <div class="content-header col-sm-12 text-center">
                <h1>{{ app_name }}</h1>
                <h2>{{ app_description }}</h2></div>
        </div>
    </div>

    <div class="container section">
        <div class="row">
            settings
            <turbo-frame id="turbo-pomodoro-settings" src="{{ path('app_pomodoros_index') }}" >

            </turbo-frame>
        </div>
    </div>

    <div class="container section">
        <div class="row">
            tasks
            <turbo-frame id="turbo-pomodoro-tasks" src="{{ path('app_tasks_index') }}" >

        </turbo-frame>
        </div>
    </div>

    {# if you don't want to expose the controller with a public URL,
       use the controller() function to define the controller to execute #}
    {{ render(controller(
        'App\\Controller\\SoundController::showSoundInformations'
    )) }}
    {#
    {% include 'sounds.html.twig' %}
    #}

{% endblock %}
